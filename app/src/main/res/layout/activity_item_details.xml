<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.9">

        <ImageView
            android:id="@+id/itemPic"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/loading"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:id="@+id/imgChat"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_chat"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvItemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvItemname"
            android:text="Price"
            android:textColor="#C9211E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemScheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:text="Discount"
            android:layout_alignLeft="@+id/tvItemprice"
            android:textColor="#696767"
            android:layout_below="@+id/tvItemprice"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItemScheme"
            android:layout_alignLeft="@+id/tvItemScheme"
            android:id="@+id/points"
            android:textColor="#696767"
            android:layout_marginTop="20dp"
            android:text="Points"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>

    <Button
        android:id="@+id/submitOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="12"
        android:textColor="#fff"
        android:background="@drawable/btn_design"
        android:text="Submit Order"/>

    <Button
        android:id="@+id/btnReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="12"
        android:textColor="#fff"
        android:background="@drawable/btn_design"
        android:text="Reviews"
        android:layout_marginTop="8dp"/>

</LinearLayout>