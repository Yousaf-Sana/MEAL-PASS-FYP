<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottom_sheet_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Seller Name"
        android:id="@+id/dealerNamePop"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#1F80D6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:id="@+id/itemPicPop"
            android:src="@drawable/loading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Item Name"
                android:id="@+id/itemNamePop"
                android:textColor="#C763F1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/itemPricePop"
                android:text="Price"
                android:textColor="#E53935"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textSize="16sp"
                android:id="@+id/itemSchemePop" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#1F80D6"/>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Quantity"
                android:id="@+id/qqq"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/qqq"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:text="+"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:background="@drawable/custom_item_layout"
                android:id="@+id/increasePop"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="28dp"
                android:id="@+id/quantityPop"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18dp"
                android:background="@drawable/custom_item_layout"
                android:layout_toLeftOf="@+id/increasePop"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:text="-"
                android:textSize="20dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:id="@+id/decreasePop"
                android:background="@drawable/custom_item_layout"
                android:layout_toLeftOf="@+id/quantityPop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Delivery"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:layout_below="@+id/qqq"
                android:id="@+id/ddd"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/isDeliver"
                android:layout_below="@+id/qqq"
                android:visibility="gone"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/ddd"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submitOrderPop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_design"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"
        android:text="Submit" />

</LinearLayout>